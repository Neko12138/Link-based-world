    "InitialLocation": "Bedroom",
    "jumpTimes": 0,
    "changeCloths": 0,
    "Locations": {
        "Dressing Room": {
            "Body": "This is your dressing room, do you want to change your clothes?",
            "Choices": [
                {
                    "Text": "Leave",
                    "Target": "Bedroom"
                },
                {
                    "Text": "Change Clothes",
                    "Key": 1,
                    "Target": "Dressing Room",
                    "clothesText": "You are change clothes."
                }
            ]
        },
        "Bedroom": {
            "Body": "This is your bedroom, warm and cozy. But you have to go to school so you can't stay here any longer.",
            "Choices": [
                {
                    "Text": "Change clothes?",
                    "Target": "Dressing Room"
                },
                {
                    "Text": "Bed?",
                    "Target": "BE"
                },
                {
                    "Text": "Go Out",
                    "Target": "Corridor"
                }
            ]
        },
        "Corridor": {
            "Body": "This is the second floor hallway of your house. Stop standing there and go out.",
            "Choices": [
                {
                    "Text": "Go Back",
                    "Target": "Bedroom"
                },
                {
                    "Text": "Bathroom",
                    "Target": "Bathroom"
                },
                {
                    "Text": "Go Down",
                    "Target": "Living Room"
                }
            ]
        },
        "Bathroom": {
            "Body": "This is your bathroom, just for you.",
            "Choices": [
                {
                    "Text": "Go Back",
                    "Target": "Corridor"
                }
            ]
        },
        "Living Room": {
            "Body": "A living room that is just for you, not big, but with all the necessary furniture.",
            "Choices": [
                {
                    "Text": "Go Out",
                    "Target": "Entrance"
                },
                {
                    "Text": "Go Up",
                    "Target": "Corridor"
                },
                {
                    "Text": "Jump on the couch!",
                    "Action": "jumpCouch",
                    "GivesKey": "houseKey",
                    "SP_Text1": "The sofa is very springy and it bounces you up.",
                    "SP_Text2": "You jump on it again and it bounces you back up. It's so much fun, but you still have to remember to go to class."
                },
                {
                    "Text": "Kitchen",
                    "Target": "Kitchen"
                }
            ]
        },
        "Kitchen": {
            "Body": "The kitchen, you use it often, but it is clean now.",
            "Choices": [
                {
                    "Text": "Go Back",
                    "Target": "Living Room"
                }
            ]
        },
        "Entrance": {
            "Body": "The entrance is where your shoes and umbrella are. Don't forget to change into appropriate clothes before going out, your keys are also in that pocket.",
            "Choices": [
                {
                    "Text": "Go Back",
                    "Target": "Living Room"
                },
                {
                    "Text": "Open The Door",
                    "Target": "Beyond",
                    "Door": 1
                }
            ]
        },
        "Beyond": {
            "Body": "You caught the last bus that could get you to class on time, you were not late!"
        },
        "BE": {
            "Body": "The bed is so warm and comfortable, it won't blame you or humiliate you. Then, you are not late, you are absent from class."
        }
    }
}