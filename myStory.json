                },
                {
                    "Text": "South",
                    "Target": "Oakes"
                }
            ]
        },
        "Oakes": {
            "Body": "Oakes College, even the buildings have tree bark on them.",
            "Choices": [
                {
                    "Text": "North",
                    "Target": "Rachel Carson"
                },
                {
                    "Text": "South",
                    "Target": "Beyond"
                }
            ]
